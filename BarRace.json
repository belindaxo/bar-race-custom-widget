{
    "name": "Bar Race",
    "description": "A Bar Race with data binding support",
    "eula": "",
    "vendor": "",
    "license": "",
    "id": "com.sap.sample.bar.race",
    "newInstancePrefix": "BarRace",
    "version": "1.0.0",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-sap-sample-bar-race",
            "url": "https://belindaxo.github.io/bar-race-custom-widget/dist/bundle.js",
            "integrity": "sha256-",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-sap-sample-bar-race-aps",
            "url": "https://belindaxo.github.io/bar-race-custom-widget/dist/bundle.js",
            "integrity": "sha256-",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 600
        },
        "height": {
            "type": "integer",
            "default": 400
        },
        "chartTitle": {
            "type": "string",
            "description": "The title of the chart",
            "default": ""
        },
        "titleSize": {
            "type": "string",
            "description": "The font size of the title text",
            "default": "16px"
        },
        "titleFontStyle": {
            "type": "string",
            "description": "The font style of the title text",
            "default": "bold"
        },
        "titleAlignment": {
            "type": "string",
            "description": "The alignment of the title text",
            "default": "left"
        },
        "titleColor": {
            "type": "string",
            "description": "The color of the title text",
            "default": "#004B8D"
        },
        "subtitleDateSize": {
            "type": "string",
            "description": "The font size of the subtitle date text",
            "default": "80px"
        },
        "subtitleTotalSize": {
            "type": "string",
            "description": "The font size of the subtitle total text",
            "default": "22px"
        },
        "subtitleX": {
            "type": "integer",
            "description": "The horizontal position of the subtitle",
            "default": -20
        },
        "subtitleY": {
            "type": "integer",
            "description": "The vertical position of the subtitle",
            "default": 100
        },
        "scaleFormat": {
            "type": "string",
            "description": "The scale of the numbers (unformatted, k, m, b)",
            "default": "unformatted"
        },
        "decimalPlaces": {
            "type": "integer",
            "description": "The number of decimal places to display",
            "default": 0
        }
    },
    "methods": {

    },
    "events": {

    },
    "dataBindings": {
        "dataBinding": {
            "feeds": [
                {
                    "id": "dimensions",
                    "description": "Dimensions",
                    "type": "dimension"
                },
                {
                    "id": "measures",
                    "description": "Measures",
                    "type": "mainStructureMember"
                }
            ]
        }
    }
}